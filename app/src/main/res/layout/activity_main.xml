<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MultiPantallas"
            android:id="@+id/textView2"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:text="Desarrollado por: Gustavo Gonzales"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/editText3" android:layout_marginBottom="138dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="19dp" android:layout_marginRight="19dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Ingrese Nombre"
            android:layout_marginTop="86dp"
            app:layout_constraintEnd_toStartOf="@+id/button" android:layout_marginBottom="54dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" android:layout_marginEnd="15dp" android:layout_marginRight="15dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="Ingrese Nombre"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginBottom="51dp" app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" android:layout_marginEnd="33dp" android:layout_marginRight="33dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Ingrese Nombre"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginBottom="234dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" android:layout_marginEnd="33dp" android:layout_marginRight="33dp"/>
    <Button
            android:text="Enviar a 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="lanzarPantalla"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/button2" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"/>
    <Button
            android:text=" Enviar a 2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="lanzarPantalla2"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toEndOf="@+id/editText2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/button3" android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"/>
    <Button
            android:text="Enviar a 3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:onClick="lanzarPantalla3"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/editText3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="232dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"/>

</android.support.constraint.ConstraintLayout>